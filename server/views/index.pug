extends layout
include mixins/prompt-install

block content
    if isZoom
        .content#main
            h1= title
            button.button.is-primary.hidden#toggle-view Toggle View

        .content.hidden#immersive
            h2= participantContexts['user1']
            h2= participantContexts['user2']
            h2= participantContexts['user3']
            h2= participantContexts['user4']
    else
        +prompt-install(title, installURL)

append scripts
    if isZoom
        script(type="module" src='/js/bundle.mjs')
        script(nomodule src='/js/bundle.js')

