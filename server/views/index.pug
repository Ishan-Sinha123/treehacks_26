extends layout

block content
    h1=title
    if isZoom
        p Welcome to your Zoom App
        // Immersive view controls (only visible to host)
        #immersive-controls(style="margin-top: 20px;")
            button#toggle-immersive.immersive-btn Start Immersive View
        // Canvas for immersive rendering (hidden by default)
        canvas#immersive-canvas(style="display: none; position: fixed; top: 0; left: 0; width: 100vw; height: 100vh; z-index: 1000;")
    else
        p You're viewing your Zoom App through the browser.&nbsp;
            a(href=`/install`) Click Here
            | &nbsp;to install your app in Zoom.

append scripts
    if isZoom
        script(type="module" src='/js/bundle.mjs')
        script(nomodule src='/js/bundle.js')

